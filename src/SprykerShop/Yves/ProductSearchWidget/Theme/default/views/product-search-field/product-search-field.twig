{% extends template('widget') %}

{% define data = {
    index: _widget.index,
    skuInputName: _widget.skuInputName,
    idProductInputName: _widget.idProductInputName,
    searchResultsLimit: _widget.searchResultsLimit,
    value: _widget.inputValue | default
} %}

{% block body %}
    {% include molecule('autocomplete-form') with {
        data: {
            id: data.index,
            name: data.skuInputName,
            value: data.value,
            suggestionsUrl: '/product-search/concrete',
            placeholder: 'quick-order.input.placeholder'
        },
        attributes: {
            'suggested-item-selector': '.products-list__item',
            'query-string': 'limit=' ~ data.searchResultsLimit ~ '&searchString',
            'value-attribute-name': 'data-id-product',
            'min-letters': 1,
        }
    } only %}
{% endblock %}

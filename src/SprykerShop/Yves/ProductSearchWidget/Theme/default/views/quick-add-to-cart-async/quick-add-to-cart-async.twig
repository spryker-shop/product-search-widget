{% extends model('template') %}

{% define data = {
    messages: _view.messages | default([]),
    form: _view.form,
    minQuantity: _view.minQuantity | default(null),
    maxQuantity: _view.maxQuantity | default(null),
    quantityInterval: _view.quantityInterval | default(1),
    isDisabled: _view.isDisabled,
    verticalLayout: _view.verticalLayout | default(true),
} %}

{% block template %}
    {% include molecule('product-quick-add-fields-partial', 'ProductSearchWidget') with {
        class: 'grid col col--sm-12',
        data: {
            messages: data.messages,
            minQuantity: data.minQuantity,
            maxQuantity: data.maxQuantity,
            quantityInterval: data.quantityInterval,
            form: data.form,
            isDisabled: data.isDisabled,
            verticalLayout: data.verticalLayout,
        }
    } only %}
{% endblock %}
